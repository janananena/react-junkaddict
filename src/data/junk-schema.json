{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://junk.store/schemas",
  "title": "JunkStore",
  "description": "A list of Junks",
  "type": "object",
  "properties": {
    "programs": {
      "$id": "https://junk.store/schemas/junks",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "unique id",
            "type": "string"
          },
          "junkname": {
            "description": "junk name",
            "type": "string"
          },
          "nick": {
            "description": "junk nick name",
            "type": [
              "string",
              "null"
            ]
          },
          "station": {
            "description": "streaming station",
            "type": "string",
            "enum": [
              "rtl",
              "joyn",
              "zdf",
              "amazon",
              "ard",
              "spotify",
              "twitch",
              "arte",
              "disney",
              "netflix",
              "sky",
              "youtube"
            ]
          },
          "link": {
            "description": "link to streaming",
            "type": "string",
            "format": "uri"
          },
          "day": {
            "description": "new episodes on days",
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "mo",
                "di",
                "mi",
                "do",
                "fr",
                "sa",
                "so"
              ]
            }
          },
          "time": {
            "description": "new episodes at time",
            "type": "string",
            "format": "time"
          },
          "category": {
            "description": "junk category",
            "type": "string",
            "enum": [
              "tv",
              "podcast"
            ]
          },
          "currentSeason": {
            "description": "currently a season on air",
            "type": "boolean"
          },
          "season": {
            "description": "current season number",
            "type": "string",
            "pattern": "^[0-9]*$"
          },
          "seen": {
            "description": "have you seen that season",
            "type": "array",
            "items": {
              "type": "boolean"
            }
          },
          "links": {
            "description": "any other links",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "alwaysShow": {
                  "type": "boolean"
                },
                "junklink": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          },
          "notes": {
            "description": "anything else",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "alwaysShow": {
                  "type": "boolean"
                },
                "note": {
                  "type": "string"
                }
              }
            }
          },
          "startDate": {
            "description": "start date of a new season",
            "type": "string",
            "format": "date"
          }
        },
        "required": [
          "id",
          "junkname",
          "station",
          "link",
          "day",
          "time",
          "category",
          "currentSeason",
          "season",
          "seen",
          "links",
          "notes"
        ]
      }
    },
    "watchList": {
      "$id": "https://junk.store/schemas/watchlist",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "unique id",
            "type": "string"
          },
          "link": {
            "description": "video link",
            "type": "string",
            "format": "uri"
          },
          "label": {
            "description": "text to display instead of link",
            "type": "string"
          },
          "collection": {
            "description": "put link in this collection",
            "type": "string"
          },
          "seen": {
            "description": "have we seen this",
            "type": "boolean"
          },
          "required": [
            "id",
            "link",
            "seen"
          ]
        }
      }
    }
  }
}